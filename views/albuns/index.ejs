<% include ../partials/header.ejs%>

<div class="presentation_bg">
    <div class="presentation_header">
        Welcome to musicApp
        <div class="lead font-weight-normal">
            know more about the best music in the world
            <div>
                <a class="btn btn-outline-secondary">let's get started</a>
            </div>
        </div>
    </div>
</div>
<div class="container">
  <%results.forEach(function(albums){%>
    <a href="/albums/<%=albums["id"]["attributes"]["im:id"]%>">
      <div class="row bg-light">
        <div class="col-sm-2">
          <img class="rounded float-left" src="<%=albums["im:image"]["0"]["label"]%>">
        </div>
        <div class="col-sm-3">
          <%=albums["im:artist"]["label"]%>
        </div>    
        <div class="col-sm-3">
          <%if(albums["im:name"]["label"].length > 16){%>
            <%=albums["im:name"]["label"].substring(0,16)%>...
          <%} else{%>
            <%=albums["im:name"]["label"]%>
          <%}%>
        </div>
        <div class="col-sm-3">
          <%=albums["im:releaseDate"]["label"].substring(0,10)%>
        </div>
        <div class="col-sm-1">
          <%=albums["im:price"]["label"]%>
        </div>   
      </div>
    </a> 
    <br>
  <%})%>
</div>

<% include ../partials/footer.ejs%>